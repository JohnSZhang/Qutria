<h1>All Question</h1>
<ul>
<% @questions.each do |question| %>
  <li><a href="<%= question_url(question) %>"><%=h question.title %></a></li>
  <% if is_logged_in? && current_user == question.user %>
    <form action="<%= question_url(question) %>" method="post">
      <%= autho_token %>
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete question">
    </form>
  <% end %>
<% end %>

</ul>

<% if is_logged_in? %>
<a href= "<%= new_question_url %>"> Ask A Question!</a>
<% end %>
