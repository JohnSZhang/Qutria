<h1>Questions: </h1>
<ul class="sorts inline-list right small-6 columns">
  <li><a href="#" id="sort-newest"
      data-sort="created_at desc">Newest</a></li>
  <li><a href="#" id="sort-popular"
      data-sort="view_count desc" >Popular</a></li>
  <li><a href="#" id="filter-month"
      data-filter="month" >Month</a></li>
  <li><a href="#" id="filter-year"
      data-filter="year" >Year</a></li>
  <li><a href="#" id="sort-name"
      data-sort="title asc" >Name</a></li>
</ul>
<ul class="small-10 small-centered questions">
</ul>

<% if (Qutria.currentUser.get('id')) { %>
  <button class="modal-form-toggle"
  data-selector="new-question-form" href="#">Add A Question</button>
  <form class="hide modal" id="new-question-form">
      <h5> New Question </h5>
      <button class="modal-form-toggle"
      data-selector="new-question-form" href="#">&#215;</button>
      <label for="question-title">Title: </label>
    <input type="text" id="question-title" name="question[title]"
      value='' >
      <label for="question-body">Body:</label>
      <textarea name="question[body]" id="question-body"></textarea>
      <button id="new-question"> Ask A Question </button>
  </form>
<% } %>
